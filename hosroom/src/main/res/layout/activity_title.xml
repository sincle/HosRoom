<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/kang_theme_bg"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="25dp"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/kang_title_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:padding="5dp"
            android:src="@drawable/icon_navigation_left" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/kang_title_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="标题"
                android:textColor="#fff" />

            <android.support.design.widget.TabLayout
                android:id="@+id/kang_title_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:tabIndicatorColor="@color/kang_theme_bg"
                app:tabSelectedTextColor="@color/kang_select_bg"
                app:tabTextColor="@color/kang_no_select_bg">

            </android.support.design.widget.TabLayout>
        </RelativeLayout>


        <ImageView
            android:id="@+id/kang_title_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:clickable="true"
            android:padding="5dp"
            android:src="@drawable/icon_navigation_right" />
    </LinearLayout>

</LinearLayout>