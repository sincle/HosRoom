    android:layout_height="match_parent"
    android:background="#f9f5f5"
    android:layout_gravity="start"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:background="@mipmap/topinfo_ban_bg"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toTopOf="@+id/activity_navigation_auto"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/relativeLayout">

        <com.haieros.hosroom.widget.CircleImageView
            android:id="@+id/kang_navigation_head"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:src="@mipmap/black"
            app:civ_border_color="#ffffff"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/kang_navigation_login"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kang_navigation_head"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/kang_login"
            android:textColor="@android:color/background_light"
            android:textSize="15sp"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/kang_navigation_afterlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/kang_navigation_head"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/kang_navigation_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:text="Kang0101"
                android:textColor="@android:color/background_light"
                android:textSize="15sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="@string/kang_level"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/kang_navigation_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/navigation_level_bgd"
                android:text="lv.2"
                android:textColor="@android:color/background_light"
                android:textSize="10sp"
                android:textStyle="italic" />
        </LinearLayout>

    </RelativeLayout>

