<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.haieros.hosroom.scene.AddScennActivity">
    <include
        layout="@layout/activity_title"
        android:layout_width="0dp"
        android:layout_height="75dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/include4"></include>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/include4"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="#fff"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/imageView2" />
    <EditText
        android:id="@+id/activity_add_scene_name"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:paddingLeft="5dp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_scene_define"
        android:background="@drawable/add_scene_edittext"
        app:layout_constraintTop_toTopOf="@+id/imageView2"
        app:layout_constraintBottom_toBottomOf="@+id/imageView2"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView2"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="@+id/imageView2"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp" />
    <TextView
        android:text="触发此场景时,执行以下:"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="10dp"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        android:layout_marginStart="10dp" />
</android.support.constraint.ConstraintLayout>
