<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/kang_scene_imageView"
        android:layout_width="0dp"
        android:layout_height="220dp"
        android:background="@mipmap/scene_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/kang_scene_imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/room_add"
        android:layout_marginRight="25dp"
        app:layout_constraintRight_toRightOf="@+id/kang_scene_imageView"
        app:layout_constraintBottom_toBottomOf="@+id/kang_scene_imageView"
        android:layout_marginBottom="15dp" />
</android.support.constraint.ConstraintLayout>