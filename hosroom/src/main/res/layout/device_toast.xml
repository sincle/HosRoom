<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <TextView
        android:text="输入KEY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:id="@+id/textView" />
    <TextView
        android:text="Serial_ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textSize="15sp"
        android:layout_marginTop="27dp"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:id="@+id/kang_device_toast_id"
        android:text="ideahos"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView2"
        app:layout_constraintLeft_toRightOf="@+id/textView2"
        android:layout_marginLeft="15dp" />
    <TextView
        android:text="KEY:"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/textView2" />
    <EditText
        android:id="@+id/kang_device_toast_key"
        android:hint="key"
        android:textSize="15sp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="10dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/textView3"
        android:layout_marginStart="10dp" />
    <TextView
        android:id="@+id/kang_device_toast_cancel"
        android:text="取消"
        android:clickable="true"
        android:textColor="#208e24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toLeftOf="@+id/kang_device_toast_confirm"
        android:layout_marginRight="30dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/kang_device_toast_confirm" />
    <TextView
        android:id="@+id/kang_device_toast_confirm"
        android:text="确定"
        android:clickable="true"
        android:textColor="#208e24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/kang_device_toast_key" />
</android.support.constraint.ConstraintLayout>